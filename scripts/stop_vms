#!/bin/bash

# virtual interface name
ifname="vr0"

if [ "$(whoami)" != "root" ]; then
  echo "sorry, need to be root"
  exit -1
fi

for i in $(cat hostfile.txt); do
  ssh root@$i 'shutdown now'
done

for i in $(cat pids.txt); do
  while [[ ${?} == 0 ]]
  do
    sleep 1s
    ps -p $i
  done
done

while [[ ${?} == 0 ]]
do
  sleep 1s
  ps -p $i
done

> "pids.txt"
> "masterpid.txt"

# delete all leases
service dnsmasq stop
> "/var/lib/misc/dnsmasq.leases"
service dnsmasq start

# delete ports
for port in $(ovs-vsctl list-ports $ifname); do
  ovs-vsctl del-port $ifname $port
done

# empty hostfile
> "hostfile.txt"
> "masterip.txt"

echo "All VMs killed"
